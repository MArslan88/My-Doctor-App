<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/loginImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                app:srcCompat="@drawable/login_pic" />

            <TextView
                android:id="@+id/signTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Sign In"
                android:textSize="24sp"
                android:textColor="@color/text_blue"
                />

            <EditText
                android:id="@+id/phone_number_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/signTxt"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/input"
                android:hint="+92 345 1234567"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:textColor="@color/text_blue" />
            <EditText
                android:id="@+id/verification_code_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/signTxt"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/input"
                android:hint="Write verification code here"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:textColor="@color/text_blue"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/send_ver_code_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_below="@+id/phone_number_input"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/btn_bg"
                />
            <Button
                android:id="@+id/verify_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_below="@+id/phone_number_input"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/btn_bg"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/skipTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/send_ver_code_button"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="40dp"
                android:text="Skip"
                android:textSize="16sp"
                android:textColor="@color/text_blue"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>